<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/session_popup_background"
    android:padding="@dimen/small_padding">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonAddCheckpoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_session_popup"
        android:drawableStart="@drawable/ic_checkpoint"
        android:fontFamily="@font/roboto"
        android:padding="@dimen/small_padding"
        android:stateListAnimator="@null"
        android:text="@string/title_add_checkpoint"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonAddWaypoint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_session_popup"
        android:drawableStart="@drawable/ic_waypoint"
        android:fontFamily="@font/roboto"
        android:padding="@dimen/small_padding"
        android:stateListAnimator="@null"
        android:text="@string/title_add_waypoint"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAddCheckpoint" />

</androidx.constraintlayout.widget.ConstraintLayout>